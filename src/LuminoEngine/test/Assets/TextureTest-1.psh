//Texture2D txDiffuse : register(t0);
//SamplerState samLinear : register(s0);

cbuffer ConstBuff : register(b0)
{
    matrix mtxProj;
    matrix mtxView;
    matrix mtxWorld;
    float4 Diffuse;
};


struct PS_INPUT
{
    float4 Pos : SV_POSITION;
    float2 Tex : TEXCOORD;
};


Texture2D g_texture1 : register(t0);
Texture2D g_texture2 : register(t1);
SamplerState g_samplerState1 : register(s1);
SamplerState g_samplerState2 : register(s0);

float4 main(PS_INPUT input) : SV_Target
{
    float4 test1 = g_texture1.Sample(g_samplerState1, input.Tex);
    float4 test2 = g_texture1.Sample(g_samplerState2, input.Tex);
    float4 test3 = g_texture2.Sample(g_samplerState1, input.Tex);

    return g_texture1.Sample(g_samplerState1, input.Tex) * Diffuse;
}
